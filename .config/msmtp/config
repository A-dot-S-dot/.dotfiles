account alexey.schwarzmann@math.tu-dortmund.de
host smtp.mathematik.tu-dortmund.de
port 587
from alexey.schwarzmann@math.tu-dortmund.de
user aschwar2
passwordeval "pass work-account"
auth on
tls on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
logfile /home/alexey/.config/msmtp/msmtp.log
# tls_starttls

