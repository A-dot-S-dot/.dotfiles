configuration {
  font: "JetBrainsMono Font Medium 14";
  line-margin: 10;

  kb-mode-complete: "";
  kb-remove-to-eol: "";
  kb-secondary-copy: "";
  kb-row-up: "Up,Control+k";
  kb-row-down: "Down,Control+j";
  kb-accept-entry: "Return,Control+l";
  kb-cancel: "Escape,Control+c";
}

@theme "/dev/null"

* {
	nord0: #2e3440;
	nord1: #3b4252;
	nord2: #434c5e;
	nord3: #4c566a;

	nord4: #d8dee9;
	nord5: #e5e9f0;
	nord6: #eceff4;

	nord7: #8fbcbb;
	nord8: #88c0d0;
	nord9: #81a1c1;
	nord10: #5e81ac;
	nord11: #bf616a;

	nord12: #d08770;
	nord13: #ebcb8b;
	nord14: #a3be8c;
	nord15: #b48ead;

  foreground:  @nord9;
  backlight:   #ccffeedd;
  background-color:  transparent;

  highlight:     underline bold #eceff4;

  transparent: rgba(46,52,64,0);
}

window {
  location: center;
  anchor:   center;
  transparency: "screenshot";
  padding: 0px;
  border:  0px;
  border-radius: 8px;

  background-color: @transparent;
  spacing: 0;
  children:  [mainbox];
  orientation: horizontal;
  width: 30%;
}

mainbox {
  spacing: 0;
  children: [ inputbar, message, listview ];
}

message {
  color: @nord0;
  padding: 5;
  border-color: @foreground;
  border:  0px 2px 2px 2px;
  background-color: @nord7;
}

inputbar {
  children: [textbox-prompt, entry];
  color: @nord8;
  padding: 11px;
  background-color: @nord1;

  border: 2px;
  border-radius:  8px 8px 0px 0px;
  border-color: @nord1;
}

entry, textbox-prompt, case-indicator {
  text-font: inherit;
  text-color:inherit;
}

textbox-prompt {
  expand: false;
  content: "î™²";
  margin: 0px 1em 0em 0em ;
}

listview {
  padding: 8px;
  border-radius: 0px 0px 8px 8px;
  border-color: @nord1;
  border: 0px 2px 2px 2px;
  background-color: @nord0;
  dynamic: false;
  lines: 6;
}

element {
  padding: 3px;
  vertical-align: 0.5;
  border-radius: 4px;
  background-color: transparent;
  color: @foreground;
  text-color: rgb(216, 222, 233);
}

element selected.normal {
background-color: @nord2;
text-color: @nord6;
}

element-text {
  background-color: inherit;
  text-color:       inherit;
}

element-icon {
  background-color: inherit;
  text-color:       inherit;
  size: 3ch;
}

button {
  padding: 6px;
  color: @foreground;
  horizontal-align: 0.5;

  border: 2px 0px 2px 2px;
  border-radius: 4px 0px 0px 4px;
  border-color: @foreground;
}

button selected normal {
  border: 2px 0px 2px 2px;
  border-color: @foreground;
}
